---
import { Button } from "./button";
import { Sparkles } from "lucide-react";
import { SiGithub } from "@icons-pack/react-simple-icons";

interface PricingPlan {
  name: string;
  badge?: string;
  description: string;
  price: string;
  features: Array<{ text: string; comingSoon?: boolean }>;
  action: {
    text: string;
    variant: "default" | "outline";
    href?: string;
  };
}

const pricingPlans: PricingPlan[] = [
  {
    name: "Community Edition",
    badge: "Available Now",
    description: "Self-host the full-featured open source version",
    price: "Free Forever",
    features: [
      { text: "Unlimited email sequences" },
      { text: "Full source code access" },
      { text: "Self-hosted deployment" },
      { text: "Advanced analytics" },
      { text: "Community support" },
      { text: "MIT License" },
    ],
    action: {
      text: "Star on GitHub",
      variant: "outline",
      href: "https://github.com/dropocol/coldjot",
    },
  },
  {
    name: "ColdJot Pro",
    badge: "Coming Soon",
    description: "Managed cloud solution with advanced features",
    price: "Coming Soon",
    features: [
      { text: "Everything in Community +" },
      { text: "Our deployment of ColdJot" },
      { text: "AI-powered response suggestions", comingSoon: true },
      { text: "Advanced A/B testing", comingSoon: true },
      { text: "Priority support" },
      { text: "Early access to new features" },
    ],
    action: {
      text: "Coming Soon",
      variant: "default",
    },
  },
];
---

<section id="pricing" class="py-20">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center space-y-4 mb-16">
      <h2 class="text-4xl font-semibold font-display">
        Start for free, upgrade when you're ready
      </h2>
      <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
        Start with our powerful open source edition and upgrade if you want us
        to manage your emails for you. No vendor lock-in, ever.
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-8">
      {
        pricingPlans.map((plan) => (
          <div class="relative flex flex-col rounded-2xl border bg-card text-card-foreground shadow-sm">
            {plan.badge && (
              <div class="absolute -top-3 left-6">
                <span class="inline-flex items-center gap-1 rounded-full px-2 py-1 text-xs font-medium bg-primary/10 text-primary">
                  {plan.badge === "Coming Soon" ? (
                    <Sparkles className="h-3 w-3" />
                  ) : (
                    <div class="h-2 w-2 rounded-full bg-primary" />
                  )}
                  {plan.badge}
                </span>
              </div>
            )}
            <div class="p-6 mt-4">
              <div class="flex flex-col gap-4">
                <div class="mb-4">
                  <h3 class="text-2xl font-bold">{plan.name}</h3>
                  <p class="text-muted-foreground">{plan.description}</p>
                </div>
                <div class="flex items-baseline gap-2">
                  <span class="text-3xl font-bold">{plan.price}</span>
                </div>
              </div>
              <div class="mt-8 space-y-4">
                <ul class="space-y-3">
                  {plan.features.map((feature) => (
                    <li class="flex items-center">
                      <svg
                        class="h-4 w-4 text-primary mr-3 flex-shrink-0"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width={2}
                          d="M5 13l4 4L19 7"
                        />
                      </svg>
                      <span class="flex items-center gap-2">
                        {feature.text}
                        {feature.comingSoon && (
                          <span class="inline-flex items-center rounded-full bg-primary/5 px-2 py-0.5 text-xs font-medium text-primary">
                            Soon
                          </span>
                        )}
                      </span>
                    </li>
                  ))}
                </ul>
                <Button
                  variant={plan.action.variant}
                  className="w-full mt-6"
                  client:load
                >
                  <a href={plan.action.href} class="flex items-center">
                    {plan.name === "Community Edition" && (
                      <SiGithub className="h-4 w-4 mr-2 text-black" />
                    )}
                    {plan.action.text}
                  </a>
                </Button>
              </div>
            </div>
          </div>
        ))
      }
    </div>

    <div class="mt-16 text-center">
      <p class="text-muted-foreground">
        Need a custom solution? <a
          href="#contact"
          class="text-primary hover:underline">Contact us</a
        > for enterprise options.
      </p>
    </div>
  </div>
</section>
