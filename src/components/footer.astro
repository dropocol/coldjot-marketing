---
import { SiGithub } from "@icons-pack/react-simple-icons";

const currentYear = new Date().getFullYear();

const footerLinks = {
  product: [
    { name: "Features", href: "#features" },
    { name: "Pricing", href: "#pricing" },
  ],
  // features: [
  //   { name: "Sequences", href: "/features#sequences" },
  //   { name: "Analytics", href: "/features#analytics" },
  //   { name: "Templates", href: "/features#templates" },
  //   { name: "Contact", href: "/features#contacts" },
  //   { name: "Timeline", href: "/features#timeline" },
  // ],
  company: [
    { name: "By a Human", href: "/by-a-human" },
    { name: "Blog", href: "/blog" },
    // { name: "Careers", href: "/careers" },
    { name: "Contact", href: "/contact" },
  ],
  // resources: [
  //   { name: "Documentation", href: "/docs" },
  //   { name: "Help Center", href: "/help" },
  //   { name: "Guides", href: "/guides" },
  //   { name: "API Reference", href: "/api" },
  //   { name: "Community", href: "/community" },
  // ],
  legal: [
    { name: "Privacy", href: "/privacy" },
    { name: "Terms", href: "/terms" },
    { name: "Security", href: "/security" },
    { name: "GDPR", href: "/gdpr" },
  ],
};

const socialLinks = [
  {
    name: "GitHub",
    href: "https://github.com/coldjot/coldjot",
    icon: SiGithub,
  },
];
---

<footer class="border-t">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="flex flex-col md:flex-row gap-12">
      <div class="md:w-1/3">
        <img src="/logo.svg" alt="ColdJot" class="h-8 w-auto" />
        <p class="mt-4 text-base max-w-sm text-muted-foreground">
          Streamline your email sequences and automate your outreach with
          powerful analytics.
        </p>
      </div>

      <div
        class="grid grid-cols-2 w-1/2 sm:grid-cols-3 gap-8 md:gap-12 md:ml-auto"
      >
        {
          Object.entries(footerLinks).map(([category, links]) => (
            <div>
              <h3 class="font-semibold mb-4">
                {category.charAt(0).toUpperCase() + category.slice(1)}
              </h3>
              <ul class="space-y-2">
                {links.map((link) => (
                  <li>
                    <a
                      href={link.href}
                      class="text-base text-muted-foreground hover:text-foreground"
                    >
                      {link.name}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </div>

    <div class="border-t mt-8 pt-8 flex items-center justify-between">
      <p class="text-sm text-muted-foreground">
        Â© {currentYear} ColdJot. All rights reserved.
      </p>
      <div class="flex space-x-4">
        {
          socialLinks.map((social) => {
            const Icon = social.icon;
            return (
              <a
                href={social.href}
                class="text-muted-foreground hover:text-foreground"
                target="_blank"
                rel="noopener noreferrer"
              >
                <span class="sr-only">{social.name}</span>
                <Icon className="h-5 w-5" />
              </a>
            );
          })
        }
      </div>
    </div>
  </div>
</footer>
