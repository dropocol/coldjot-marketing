---
import {
  Timer,
  FileText,
  Mail,
  BarChart3,
  Users,
  ListTodo,
  Activity,
  Mail as MailIcon,
} from "lucide-react";
import HiddenCost from "./hidden-cost.astro";

interface Feature {
  title: string;
  description: string;
  icon: any;
  colSpan?: string;
  iconColor?: string;
}

const mainFeatures = [
  {
    title: "Email Sequences",
    description:
      "Create and manage sophisticated email sequences with ease. Schedule, automate, and track your email campaigns effortlessly.",
    image: {
      "1x": "/features/sequence.png",
      "2x": "/features/sequence@2x.png",
    },
  },
  {
    title: "Analytics Dashboard",
    description:
      "Get detailed insights into your email campaigns with comprehensive analytics. See how your emails perform over time.",
    image: {
      "1x": "/features/analytics.png",
      "2x": "/features/analytics@2x.png",
    },
  },
  {
    title: "Timeline View",
    description:
      "Visualize your email sequence timeline and monitor outgoing communications in real-time.",
    image: {
      "1x": "/features/timeline.png",
      "2x": "/features/timeline@2x.png",
    },
  },
  {
    title: "Email Tracking",
    description:
      "Track opens, clicks, and engagement in real-time. Get insights into how your emails perform.",
    image: {
      "1x": "/features/tracking.png",
      "2x": "/features/tracking@2x.png",
    },
  },
];

const additionalFeatures = [
  {
    title: "Gmail Mailboxes",
    description:
      "Connect and manage multiple Gmail mailboxes. Send emails from your preferred Gmail account.",
    colSpan: "col-span-12 md:col-span-5",
    icon: MailIcon,
    iconColor: "text-red-600",
  },
  {
    title: "Contact Lists",
    description:
      "Create contact lists to segment your contacts and automate your email campaigns based on custom criteria.",
    colSpan: "col-span-12 md:col-span-7",
    icon: ListTodo,
    iconColor: "text-purple-600",
  },
  {
    title: "Email Templates",
    description:
      "Create and save reusable email templates to maintain consistency and save time in your outreach.",
    colSpan: "col-span-12 md:col-span-7",
    icon: FileText,
    iconColor: "text-emerald-600",
  },
  {
    title: "Contact Management",
    description: "Import, organize and manage your contacts efficiently.",
    colSpan: "col-span-12 md:col-span-5",
    icon: Users,
    iconColor: "text-amber-600",
  },
];
---

<section id="features" class="py-20">
  <HiddenCost />

  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Solution Section -->
    <div class="text-center space-y-6 mb-16">
      <div
        class="inline-flex items-center justify-center px-4 py-1.5 mb-4 border border-primary/20 bg-primary/10 rounded-full"
      >
        <span class="text-sm font-medium text-primary">The Solution</span>
      </div>
      <h2 class="text-4xl font-semibold font-display">
        Turn Cold Emails into Warm Conversations
      </h2>
      <p class="text-xl text-muted-foreground max-w-3xl mx-auto">
        Stop sending emails into the void. Let ColdJot help you build meaningful
        relationships through perfectly timed, personalized sequences that get
        responses.
      </p>
    </div>

    <!-- Main Features -->
    <div class="space-y-24 mb-32">
      {
        mainFeatures.map((feature) => (
          <div class="space-y-8">
            <div class="flex flex-col max-w-xl text-left items-start space-y-2">
              <h3 class="text-3xl font-semibold mb-2">{feature.title}</h3>
              <p class="text-left text-base text-muted-foreground">
                {feature.description}
              </p>
            </div>

            <div class="bg-white p-1 border shadow-sm border-slate-200 rounded-2xl">
              <div class="flex border py-4 border-slate-100 justify-center items-center bg-gray-50 rounded-xl overflow-hidden h-auto px-4">
                <img
                  src={feature.image["1x"]}
                  srcset={`${feature.image["1x"]} 1x, ${feature.image["2x"]} 2x`}
                  alt={`${feature.title} Interface`}
                  class="w-full h-full object-cover object-top mx-4 border border-slate-300 rounded-2xl shadow-2xl"
                />
              </div>
            </div>
          </div>
        ))
      }
    </div>

    <!-- Additional Features -->
    <div class="space-y-8">
      <div class="space-y-2">
        <div class="flex flex-col max-w-xl mx-auto items-center space-y-2">
          <h3 class="text-3xl font-semibold mb-2">Everything You Need</h3>
          <p class="text-center text-base text-muted-foreground">
            A complete toolkit to <span class="font-semibold text-gray-900"
              >build relationships at scale</span
            > and <span class="font-semibold text-gray-900"
              >convert cold prospects</span
            > into warm leads.
          </p>
        </div>
      </div>

      <div class="grid grid-cols-12 gap-3 mt-14">
        {
          additionalFeatures.map((feature) => (
            <div
              class={`group flex flex-col rounded-2xl border-[1px] border-slate-200 p-1 shadow-sm ${feature.colSpan}`}
            >
              <div class="flex flex-1 flex-col justify-between gap-3 rounded-xl p-6 bg-gray-50 border-[1px] border-slate-100 transition-colors duration-200 group-hover:border-slate-200">
                <div class="aspect-[4/1] md:aspect-[4/1]">
                  <feature.icon
                    className={`h-8 w-8 md:h-10 md:w-10 ${feature.iconColor}`}
                  />
                </div>
                <div class="flex flex-col gap-2">
                  <h4 class="flex items-center text-lg font-semibold text-gray-900">
                    <span>{feature.title}</span>
                  </h4>
                  <p class="text-balance text-base text-gray-800">
                    {feature.description}
                  </p>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
