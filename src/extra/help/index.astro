---
import Layout from "@/layouts/layout.astro";
import { Button } from "@/components/button";

const categories = [
  {
    title: "Getting Started",
    description:
      "Learn the basics of ColdJot and set up your first email sequence.",
    icon: "üöÄ",
    links: [
      { title: "Quick Start Guide", href: "/help/quick-start" },
      { title: "Creating Your First Sequence", href: "/help/first-sequence" },
      { title: "Account Setup", href: "/help/account-setup" },
    ],
  },
  {
    title: "Email Sequences",
    description: "Master email sequence creation and management.",
    icon: "üìß",
    links: [
      {
        title: "Sequence Best Practices",
        href: "/help/sequence-best-practices",
      },
      { title: "Advanced Automation", href: "/help/advanced-automation" },
      { title: "Sequence Analytics", href: "/help/sequence-analytics" },
    ],
  },
  {
    title: "Templates",
    description: "Learn how to create and manage email templates.",
    icon: "üìù",
    links: [
      { title: "Template Creation", href: "/help/template-creation" },
      { title: "Dynamic Content", href: "/help/dynamic-content" },
      { title: "Template Library", href: "/help/template-library" },
    ],
  },
  {
    title: "Contact Management",
    description: "Organize and manage your contacts effectively.",
    icon: "üë•",
    links: [
      { title: "Import Contacts", href: "/help/import-contacts" },
      { title: "Contact Lists", href: "/help/contact-lists" },
      { title: "Contact Fields", href: "/help/contact-fields" },
    ],
  },
];
---

<Layout
  title="Help Center - ColdJot"
  description="Get help with ColdJot's email automation features and tools."
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Help Center Header -->
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">How can we help?</h1>
      <p class="text-xl text-gray-600 mb-8">
        Find answers to common questions and learn how to make the most of
        ColdJot
      </p>

      <!-- Search Bar -->
      <div class="max-w-2xl mx-auto">
        <div class="relative">
          <input
            type="text"
            placeholder="Search for help articles..."
            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent"
          />
          <Button
            variant="default"
            className="absolute right-2 top-1/2 transform -translate-y-1/2"
            client:load
          >
            Search
          </Button>
        </div>
      </div>
    </div>

    <!-- Categories Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {
        categories.map((category) => (
          <div class="bg-white rounded-lg p-6 shadow-sm">
            <div class="flex items-center mb-4">
              <span class="text-3xl mr-3">{category.icon}</span>
              <h2 class="text-2xl font-semibold text-gray-900">
                {category.title}
              </h2>
            </div>
            <p class="text-gray-600 mb-6">{category.description}</p>
            <ul class="space-y-3">
              {category.links.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="text-purple-600 hover:text-purple-700 flex items-center"
                  >
                    <span class="mr-2">‚Üí</span>
                    {link.title}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>

    <!-- Contact Support -->
    <div class="mt-16 text-center">
      <h2 class="text-2xl font-semibold text-gray-900 mb-4">
        Can't find what you're looking for?
      </h2>
      <p class="text-gray-600 mb-6">
        Our support team is here to help you with any questions you may have.
      </p>
      <Button variant="outline" size="lg" client:load> Contact Support </Button>
    </div>
  </div>
</Layout>
